<div id="leave_form">
	<%= form_for @leave do |f| %>
		<% if @leave.errors.any? %>
			<h4><%= pluralize(@leave.errors.count, "error")%> prohibited this leave from saving!</h4>
			<ul>
				<% @leave.errors.full_messages.each do |msg|%>
					<li><%= msg %></li>
				<% end %>
			</ul>
		<% end %>
		<div id="form_elements">
			<div class="half_width">

				<div class="field">
					<%= f.label :member_id, "Applicant name"%><br>
					<%= f.collection_select(:member_id,Member.all,:id,:Name,:include_blank => true)%>
				</div>
				<div class="field">
					<%= f.label :leavetype_id, "Leave type"%><br>
					<%= f.collection_select(:leavetype_id,Leavetype.all,:id,:name,:include_blank => true)%>
				</div>
				<div class="field">
					<%= f.label :leavedaytype_id, "Leave day type"%><br>
					<%= f.collection_select(:leavedaytype_id,Leavedaytype.all,:id,:name,:include_blank => true)%>
				</div>
				<div class="field">
					<%= f.label :leavestatus_id, "Leave status"%><br>
					<%= f.collection_select(:leavestatus_id,Leavestatus.all,:id,:name,:include_blank => true)%>
				</div>
				<div class="field">
					<%= f.label :reporting_to %><br>
					<%= f.collection_select(:reporting_to, Member.all, :id, :Name,:include_blank => true) %>
				</div>
				<div class="field">
					<%= f.label :contact_number %><br>
					<%= f.telephone_field :contact_number %>
				</div>
			</div>
			<div class="half_width">
				<div class="field">
					<%= f.label :leave_start_date %><br>
					<%= f.date_field :leave_start_date%>
				</div>
				<div class="field">
					<%= f.label :leave_end_date %><br>
					<%= f.date_field :leave_end_date%>
				</div>
				<div class="field">
					<%= f.label :reason_for_leave %><br>
					<%= f.text_area :reason_for_leave %>
				</div>
				<div class="field">
					<%= f.label :comments %><br>
					<%= f.text_area :comments %>
				</div>
				<div class="field">
					<%= f.submit %>
				</div>
			</div>
		</div>
	<% end %>
</div>