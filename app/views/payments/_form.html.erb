<%= form_for([@project, @project.payments.build]) do |f| %>
  <p>
    <%= f.label :payment_date %><br>
    <%= f.date_field :payment_date ,{'data-provide'=> 'datepicker','data-date-format'=>'yyyy/mm/dd','data-auto-close'=>true} %>
  </p>
  <p>
    <%= f.label :payment_amount %><br>
    <%= f.text_field :payment_amount %>
  </p>
  <p>
    <%= f.label :payment_desc %><br>
    <%= f.text_area :payment_desc %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>