<div id="Skills_view">
	<table>
		<tr>
			<th>Skill Id</th>
			<th>Skill Name</th>
			<th>Skill Status</th>
			<th colspan="3">Operations</th>
		</tr>

		<tr>
			<td><%= @skill.id%></td>
			<td><%= @skill.name%></td>
			<td><%= @skill.status%></td>
			<td><%= link_to "Edit",edit_skill_path(@skill)%></td>
			<td><%= link_to "Delete",skill_path(@skill), method: :delete,data:{confirm: "Are you sure?"}%></td>
			<td><%= link_to "Back",skills_path %></td>
		</tr>
		
	</table>
</div>