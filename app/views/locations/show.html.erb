<div id="Show_location">
	<table>
		<tr>
			<th>Id</th>
			<th>Nmae</th>
			<th>Status</th>
			<th colspan="3">Actions</th>
		</tr>
		<tr>
			<td><%= @location.id%></td>
			<td><%= @location.name%></td>
			<td><%= @location.status%></td>
			<td><%= link_to "Edit",edit_location_path(@location)%></td>
			<td><%= link_to "Delete",location_path(@location), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<td><%= link_to "Back",locations_path %></td>
		</tr>
	</table>
</div>