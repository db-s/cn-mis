<% if @admins.length>0 %>
  <ul>
    <li><%= link_to 'Create admin', new_admin_path %></li>
  </ul>

  <table>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>

    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.id %></td>
        <td><%= admin.username %></td>
         <td><%= admin.email %></td>
      </tr>
    <% end %>
  </table>
  <% else %>
  <ul>
    <li>No administrator has been created yet. </li>
    <li><%= link_to 'Create admin', new_admin_path %></li>
  </ul>
<% end %>