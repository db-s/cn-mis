<div id="project_status_actions">
	<table>
		<tr>
			<th><%= link_to "Add Project Status", new_projectstatus_path %></th>
			<th><%= render "search"%></th>
		</tr>
	</table>
</div>

<% if @projectstatuses && @projectstatuses.length >0 %>
	<div><%= link_to "Download CSV", projectstatuses_path(format: "csv") %></div>

	<table>
		<tr>
			<th>
				<%= check_box_tag(:Select_all_project_status) %>
				<%= label_tag(:Select_all_project_status, "Select All") %>
			</th>
			<th>Id</th>
			<th>Name</th>
			<th>Status</th>
			<th colspan="3">Actions</th>
		</tr>
		<% @projectstatuses.each do |projectstatus| %>
			<tr>
				<td><input type="checkbox" name="sample[]" class="check_project_status" /></td>
				<td><%= projectstatus.id%></td>
				<td><%= projectstatus.name%></td>
				<td><%= projectstatus.status%></td>
				<td><%= link_to "View", projectstatus_path(projectstatus)%></td>
				<td><%= link_to "Update", edit_projectstatus_path(projectstatus)%></td>
				<td><%= link_to "Destroy", projectstatus_path(projectstatus), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<%end%>
	</table>
	<!-- #render page links in the view: -->
	<%= will_paginate @posts %>
<%else%>
	<h3>No project status found</h3>
<%end%>