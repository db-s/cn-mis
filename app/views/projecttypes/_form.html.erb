<div id="project_type_form">
	<%= form_for @projecttype do |f|%>
		<% if @projecttype.errors.any? %>
			<h3><%= pluralize(@projecttype.errors.count, "Error")%> prohibitate this project type to save</h3>
			<ul>
				<% @projecttype.errors.full_messages.each do |msg|%>
					<li><%= msg %></li>
				<% end %>
			</ul>
		<% end %>

		<div id="project_type_form_elements">
			<p>
				<%= f.label(:name)%>
				<%= f.text_field(:name)%>
			</p>
			<p>
				<%= f.label(:status)%>
				<%= f.check_box(:status)%>
			</p>
			<p>
				<%= f.submit%>
			</p>
		</div>
	<% end %>
</div>